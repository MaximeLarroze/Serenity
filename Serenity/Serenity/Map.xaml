<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Serenity.Map"
             NavigationPage.TitleView="true"
             NavigationPage.BackButtonTitle="true"
             NavigationPage.HasNavigationBar="True"
             Title="Serenity"
             Appearing="ContentPage_Appearing">
    <ContentPage.Content>
        <StackLayout>
            <Label/>
            <Label/>
            <Label/>
            <Button Padding="10" Text="URGENCE" Clicked="Bt_Clicked_Urgence2" FontAttributes="Bold" BackgroundColor="Blue" TextColor="White" HorizontalOptions="FillAndExpand"/>
            <Button Padding="10" Text="SCANNER" Clicked="Bt_Clicked_SCAN" FontAttributes="Bold"  BackgroundColor="Red" TextColor="Black" HorizontalOptions="FillAndExpand"/>
            <ActivityIndicator x:Name="ChargementMAP" IsRunning="False" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Padding="10" Text="Aires de repos" Clicked="Bt_Clicked_Aires" FontAttributes="Bold" BackgroundColor="White" TextColor="Blue" HorizontalOptions="FillAndExpand"/>
        </StackLayout>


        <!--</ScrollView>-->
    </ContentPage.Content>
</ContentPage>